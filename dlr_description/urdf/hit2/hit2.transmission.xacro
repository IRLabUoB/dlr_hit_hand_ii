<?xml version="1.0"?>

<robot name="robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro name="dlr_hit2_finger_transmission" params="name finger_name">

		<xacro:property name="Interface10" value="hardware_interface/PositionJointInterface"/>
		<xacro:property name="Interface30" value="hardware_interface/EffortJointInterface"/>

		<transmission name="${name}_${finger_name}_abd_trans">
			<robotNamespace>${name}</robotNamespace>
			<type>transmission_interface/SimpleTransmission</type>
			<joint name="${name}_${finger_name}_abd_joint">
				<hardwareInterface>${Interface10}</hardwareInterface>
				<!-- <hardwareInterface>${Interface30}</hardwareInterface> -->
			</joint>
			<actuator name="${name}_${finger_name}_abd_motor">
				<mechanicalReduction>1.0</mechanicalReduction>
			</actuator>
		</transmission>

		<transmission name="${name}_${finger_name}_inner_trans">
			<robotNamespace>${name}</robotNamespace>
			<type>transmission_interface/SimpleTransmission</type>
			<joint name="${name}_${finger_name}_inner_joint">
				<hardwareInterface>${Interface10}</hardwareInterface>
				<!-- <hardwareInterface>${Interface30}</hardwareInterface> -->
			</joint>
			<actuator name="${name}_${finger_name}_inner_motor">
				<mechanicalReduction>1.0</mechanicalReduction>
			</actuator>
		</transmission>

		<transmission name="${name}_${finger_name}_outer1_trans">
			<robotNamespace>${name}</robotNamespace>
			<type>transmission_interface/SimpleTransmission</type>
			<joint name="${name}_${finger_name}_outer1_joint">
				<hardwareInterface>${Interface10}</hardwareInterface>
				<!-- <hardwareInterface>${Interface30}</hardwareInterface> -->
			</joint>
			<actuator name="${name}_${finger_name}_outer1_motor">
				<mechanicalReduction>1.0</mechanicalReduction>
			</actuator>
		</transmission>

		<transmission name="${name}_${finger_name}_outer2_trans">
			<robotNamespace>${name}</robotNamespace>
			<type>transmission_interface/SimpleTransmission</type>
			<joint name="${name}_${finger_name}_outer2_joint">
				<hardwareInterface>${Interface10}</hardwareInterface>
				<!-- <hardwareInterface>${Interface30}</hardwareInterface> -->
			</joint>
			<actuator name="${name}_${finger_name}_outer2_motor">
				<mechanicalReduction>1.0</mechanicalReduction>
			</actuator>
		</transmission>
