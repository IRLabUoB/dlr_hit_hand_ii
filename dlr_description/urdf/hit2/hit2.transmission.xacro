	</xacro:macro>

	<xacro:macro name="dlr_hit2_transmission" params="name">
		<!-- five equal fingers -->

		<xacro:dlr_hit2_finger_transmission name="${name}" finger_name="thumb" />

		<xacro:dlr_hit2_finger_transmission name="${name}" finger_name="index" />

		<xacro:dlr_hit2_finger_transmission name="${name}" finger_name="middle" />

		<xacro:dlr_hit2_finger_transmission name="${name}" finger_name="ring" />

		<xacro:dlr_hit2_finger_transmission name="${name}" finger_name="pinky" />		

